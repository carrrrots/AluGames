<div class='collapse-container'>

   <h1 ><i class="fas fa-dice"></i>   Dashboard</h1>

  <!--COLLAPSE BUTTONS-->
  <div id="accordion">
    <div class="card">
      <div class="card-header" id="headingOne">
        <h5 class="mb-0">
          <button class="btn btn-link btn-collapse" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            My Products
          </button>
        </h5>
      </div>

      <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
        <div class="card-body"> <!--FAZER LINK JOGOS CRIADOS PELO USER-->
          <% current_user.games.each do |game| %>
            <%= link_to game.name, game, class: "btn d-flex justify-content-center mx-5 mt-2 rounded-pill btn-show link-btn btn-menu shadow" %>
          <%end%>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header" id="headingTwo">
        <h5 class="mb-0">
          <button class="btn btn-link collapsed btn-collapse" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
            Rented Games
          </button>
        </h5>
      </div>
      <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
        <div class="card-body"><!--FAZER LINK JOGOS QUE USER ALUGOU-->
          <% Rent.where(user: current_user).map { |rent| rent.game }.each do |game| %>
            <%= link_to game.name, game, class: "btn d-flex justify-content-center mx-5 mt-2 rounded-pill btn-show link-btn btn-menu shadow" %>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
