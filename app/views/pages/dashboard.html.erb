<h1><i class="fas fa-dice dash-logo mb-5"></i> Dashboard</h1>
<div class="d-flex flex-column align-items-center">
  <div class="card w-25">
  <h2 class="card-title text-center mt-2">My Products</h2>
    <div class="card-body">
      <% current_user.games.each do |game| %>
      <%= link_to game.name, game, class: "btn d-flex justify-content-center mx-5 mt-2 rounded-pill btn-show link-btn btn-menu shadow" %>
      <%end%>
    </div>
  </div>
  <div class="card w-25 mt-3">
  <h2 class="card-title text-center mt-2">Rented Games</h2>
    <div class="card-body ">
      <% Rent.where(user: current_user).map { |rent| rent.game }.each do |game| %>
      <%= link_to game.name, game, class: "btn d-flex justify-content-center mx-5 mt-2 rounded-pill btn-show link-btn btn-menu shadow" %>
      <%end%>
    </div>
  </div>
</div>
