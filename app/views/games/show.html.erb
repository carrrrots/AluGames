<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://movimentorpg.com.br/wp-content/uploads/2021/01/Cartas-Coup-768x205.jpg)">
<div></div>
  <div class="card-product">
    <h2><%= @game.name.upcase %></h2>
    <p><%= @game.category.capitalize %> game for <%= @game.number_of_players%> players </p>
  </div>
  <div class="card-available">
    <h3><%if @game.available %>
      <i class="far fa-check-circle" style="color:green" data-toggle="tooltip" data-placement="top" title="AVAILABLE"></i>
      <%else%>
      <i class="far fa-times-circle" style="color:red" data-toggle="tooltip" data-placement="top" title="NOT AVAILABLE"></i>
    <%end%></h3>
  </div>
</div>

<div class="container">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="carousel-img d-block" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcReMxIJ9PB1XUEoAimLjXJcrVuYJbjnBxqmcA&usqp=CAU" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="carousel-img d-block" src="https://4.bp.blogspot.com/-RoF2F0E9vbA/WP30JtTFViI/AAAAAAAAb-Y/NpUZ_SXqKPU3MsQNUBYfeKczXskubGWGQCLcB/s1600/coup.jpg" alt="Second slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <div class="infos">
      <div class="description">
        <p class="text-break">
          <strong>Description:</strong>
          <%= @game.description %>
        </p>
      </div>
      <div class="price">
        <h2><strong>Price:</strong></h2>
        <h2>R$ <%=@game.price%>.00</h2>
      </div>
    </div>
</div>

<div class="footer">
  <div class="footer-links">
    <i class="far fa-edit"></i><%= link_to 'Edit', edit_game_path(@game) %>
    <i class="fas fa-undo-alt"></i><%= link_to 'Back', games_path %>
    <i class="fas fa-trash"></i><td><%= link_to 'Destroy', @game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </div>
  <div class="footer-copyright">
    This footer is made with <i class="fas fa-heart"></i> at Le Wagon
  </div>
</div>
