<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://movimentorpg.com.br/wp-content/uploads/2021/01/Cartas-Coup-768x205.jpg)">
  <div class="card-product">
    <h2><%= @game.name.upcase %></h2>
    <ul class="list-inline">
      <li class="list-inline-item">Category: <%= @game.category %> </li>
      <li class="list-inline-item"><%= @game.number_of_players%> players </li>
    </ul>
  </div>
</div>

  <div class="description">
    <div>
      <p class="text-break">
        <strong>Description:</strong>
        <%= @game.description %>
        <%= @game.description %>
        <%= @game.description %>
      </p>
    </div>
  </div>

<p>
  <strong>Available:</strong>
  <%= @game.available ? 'yes' : 'no' %>
</p>

<%= link_to 'Edit', edit_game_path(@game) %>
<%= link_to 'Back', games_path %>

<td><%= link_to 'Destroy', @game, method: :delete, data: { confirm: 'Are you sure?' } %></td>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [ @game, @rent ] do |f| %>
          <%= f.input :start_date, input_html: {class: "datepicker"}  %>
          <%= f.input :end_date, input_html: {class: "datepicker"} %>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <%= f.submit "Rent", class: "btn btn-primary" %>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
