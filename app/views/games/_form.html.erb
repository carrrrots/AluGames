<!--FORM-NEW-->
<%= simple_form_for [ @game ] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category, collection: Game::GAME_CATEGORIES %>
    <%= f.input :price, value: "R$" %>
    <%= f.input :number_of_players, collection: Game::NUMBER_OF_PLAYERS %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file, input_html: { class: 'd-none' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
    <div class='d-flex justify-content-between mt-4' >
      <%= f.submit "Back", class: "btn btn-new rounded-pill " %>
      <%= f.submit "Create", class: "btn btn-new rounded-pill" %>
    </div>
  </div>
<% end %>
